#!/bin/sh

# git overview | column -ts '|'

function printstatus {
	cd $1
	# echo $1
	if [ -d .git ]; then
		local status=$(git status -sb 2>&1)
		echo "$1 | $status"
		# git status -sb
	else
		echo "Not a git repository"
	fi;
	echo ""
	cd ..
}

# Loop over all child directories
find . -maxdepth 1 -type d \( ! -name . \) | while read dir; do
	printstatus "$dir/"
done

